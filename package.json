{
  "name": "python-override-hint",
  "displayName": "Python Override Hint",
  "description": "Python 代码中类方法是否被重写的可视化提示器",
  "version": "1.0.1",
  "publisher": "Victor-lee",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomy128/vscode-python-override-hint.git"
  },
  "homepage": "https://github.com/tomy128/vscode-python-override-hint#readme",
  "bugs": {
    "url": "https://github.com/tomy128/vscode-python-override-hint/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Victor Lee"
  },
  "qna": "marketplace",
  "pricing": "Free",
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "python",
    "override",
    "inheritance",
    "class",
    "method"
  ],
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "contributes": {
    "commands": [
      {
        "command": "pythonOverrideHint.refresh",
        "title": "Python Override Hint: Refresh",
        "category": "Python Override Hint"
      },
      {
        "command": "pythonOverrideHint.quickPickRelations",
        "title": "Python Override Hint: Pick Relations",
        "category": "Python Override Hint"
      }
    ],
    "configuration": {
      "title": "Python Override Hint",
      "properties": {
        "PythonOverrideHint.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用 Python Override Hint 提示器"
        },
        "PythonOverrideHint.debounceDelay": {
          "type": "number",
          "default": 1000,
          "description": "分析延迟时间（毫秒）"
        },
        "PythonOverrideHint.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Python 解释器路径"
        },
        "PythonOverrideHint.classCodeLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "显示类级 CodeLens（类定义行）。关闭以仅显示方法级 CodeLens。"
        },
        "PythonOverrideHint.classCodeLens.style": {
          "type": "string",
          "enum": ["summary", "list"],
          "default": "summary",
          "description": "类级 CodeLens 显示方式：summary 显示数量摘要并支持 QuickPick；list 直接列出名称。"
        }
      }
    }
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.5",
    "vsce": "^2.15.0"
  }
}
